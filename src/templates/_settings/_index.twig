{# @var craft \craft\web\twig\variables\CraftVariable #}
{% import "_includes/forms" as forms %}


{{ forms.autosuggestfield({
    label: 'DeepL API key'|t('deepl'),
    name: 'apiKey',
    id: 'apiKey',
    instructions: 'Your API key can be found in your [DeepL Account](https://www.deepl.com/account/summary)'|t('deepl'),
    suggestEnvVars: true,
    value: settings.apiKey,
}) }}

 {{ forms.lightswitchField({
     label:        'Allow content to be translated across sitegroups'|t('deepl'),
     instructions: "Use this when your content isn\'t, or isn\'t only, grouped per sitegroup"|t('deepl'),
     id:           'translateAcrossSiteGroups',
     name:         'translateAcrossSiteGroups',
     on:           settings.translateAcrossSiteGroups,
 }) }}


 {{ forms.lightswitchField({
     label:        'Translate slugs'|t('deepl'),
     name:         'translateSlugs',
     id:           'translateSlugs',
     instructions: 'If disabled, the source slug will be kept for the translated entry'|t('deepl'),
     on:           settings.translateSlugs,
 }) }}

 {{ forms.lightswitchField({
     label:        'Allow entries in the primary site to be translated'|t('deepl'),
     id:           'primarySiteTranslation',
     name:         'primarySiteTranslation',
     on:           settings.primarySiteTranslation,
 }) }}

{{ forms.lightswitchField({
    label:        'Enable the "Copy content" feature'|t('deepl'),
    instructions: 'This skips translation and simply copies all values to a draft - note that this still runs through the same code so is bound to the same supported fields as the translate function'|t('deepl'),
    id:           'copyContent',
    name:         'copyContent',
    on:           settings.copyContent,
}) }}