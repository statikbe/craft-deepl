<fieldset>
    <legend class="h6">{{ "Deepl" }}</legend>
    <div class="meta">
        {% set siteParam = craft.app.request.getParam('site') %}
        {% set selectedSite = craft.app.sites.getSiteByHandle(siteParam) %}
        {% set otherSites = entry.section.siteSettings|filter(v => v.id != selectedSite.id) %}

        {% for site in otherSites %}
            {% set site = craft.app.sites.getSiteById(site.id) %}
            <div class="field">
                <div class="heading">
                    <label>{{ "Translation options" }}</label></div>
                <div class="input ltr">
                    <div class="wrapper">
                        <div class="btngroup flex">
                            <div>
                                <a href="{{ actionUrl('deepl/translation/index', {'entry': entry.id, 'sourceLocale': site.id, 'destinationLocale': selectedSite.id}) }}"
                                   class="btn ">
                                    {{ "From {otherLocale} to {currentLocale}"|t('app', { otherLocale: site.locale, currentLocale: selectedSite.locale }) }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</fieldset>