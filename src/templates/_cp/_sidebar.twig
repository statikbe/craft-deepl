<fieldset>
    <legend class="h6">{{ "Deepl" }}</legend>
    <div class="meta">

        {% set siteParam = craft.app.request.getParam('site') %}
        {% set selectedSite = craft.app.sites.getSiteByHandle(siteParam) %}

        {# Change this to only sites the current section is enabled for #}
        {% set otherSites = craft.app.sites.getAllSites()|filter(v => v.handle != selectedSite.handle) %}


        {% for site in otherSites %}
            <div id="postDate-field" class="field">
                <div class="heading">
                    <label id="postDate-label" for="postDate">{{ "Translation options" }}</label></div>

                <div class="input ltr">
                    <div class="datetimewrapper">

                        <div class="btngroup flex">
                            <div>

                                <a href="{{ actionUrl('deepl/translation/index', {'entry': entry.id, 'sourceLocale': site.id, 'destinationLocale': selectedSite.id}) }}" class="btn ">
                                    {{ "From {otherLocale} to {currentLocale}"|t('app', { otherLocale: site.locale, currentLocale: selectedSite.locale }) }}
                                </a>

                            </div>
                        </div>


                    </div>
                </div>


            </div>
        {% endfor %}
    </div>
</fieldset>